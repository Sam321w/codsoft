import json
import os

CONTACTS_FILE = 'contacts.json'

def load_contact():
    if not os.path.exists(CONTACTS_FILE):
        return {}
    with open(CONTACTS_FILE, 'r') as file:
        try:
            return json.load(file)
        except json.JSONDecodeError:
            return {}

def save_contacts(contacts):
    with open(CONTACTS_FILE, 'w') as file:
        json.dump(contacts, file, indent=4)

def display_menu():
    print("\n--- Contacts Book Menu ---")
    print("1. View all contacts")
    print("2. Add a new contact")
    print("3. Search for a contact")
    print("4. Update a contact")
    print("5. Delete a contact")
    print("6. Save and exit")
    print("7. Exit without saving")
    print("--------------------------")

def view_all_contacts(contacts):
    if not contacts:
        print("No contacts found.")
        return
    print("\n--- All Contacts ---")
    for name, details in contacts.items():
        print(f"Name: {name}")
        print(f"Phone: {details['phone']}")
        print(f"Email: {details['email']}")
        print("-" * 20)

def add_contacts(contacts):
    print("\n--- Add New Contact ---")
    name = input("Enter name: ").strip()
    if name in contacts:
        print("Contact already exists.")
        return
    phone = input("Enter phone number: ").strip()
    email = input("Enter email address: ").strip()
    contacts[name] = {"phone": phone, "email": email}
    print("Contact added successfully.")

def search_contact(contacts):
    print("\n--- Search Contact ---")
    name_to_find = input("Enter the name to search: ").strip()
    if name_to_find in contacts:
        details = contacts[name_to_find]
        print(f"\nName: {name_to_find}")
        print(f"Phone: {details['phone']}")
        print(f"Email: {details['email']}")
    else:
        print(f"No contact found with the name '{name_to_find}'.")

def update_contact(contacts):
    print("\n--- Update Contact ---")
    name_to_update = input("Enter the name to update: ").strip()
    if name_to_update in contacts:
        current_details = contacts[name_to_update]
        print(f"Current phone: {current_details['phone']}")
        new_phone = input("New phone (press Enter to keep current): ").strip()
        print(f"Current email: {current_details['email']}")
        new_email = input("New email (press Enter to keep current): ").strip()
        if new_phone:
            contacts[name_to_update]['phone'] = new_phone
        if new_email:
            contacts[name_to_update]['email'] = new_email
        print(f"Contact '{name_to_update}' updated successfully.")
    else:
        print(f"No contact found with the name '{name_to_update}'.")

def delete_contact(contacts):
    print("\n--- Delete Contact ---")
    name_to_delete = input("Enter the name to delete: ").strip()
    if name_to_delete in contacts:
        del contacts[name_to_delete]
        print(f"Contact '{name_to_delete}' deleted successfully.")
    else:
        print(f"No contact found with the name '{name_to_delete}'.")

def main():
    contacts = load_contact()
    while True:
        display_menu()
        choice = input("Enter your choice: ").strip()
        if choice == "1":
            view_all_contacts(contacts)
        elif choice == "2":
            add_contacts(contacts)
        elif choice == "3":
            search_contact(contacts)
        elif choice == "4":
            update_contact(contacts)
        elif choice == "5":
            delete_contact(contacts)
        elif choice == "6":
            save_contacts(contacts)
            print("Contacts saved. Goodbye!")
            break
        elif choice == "7":
            print("Exiting without saving.")
            break
        else:
            print("Invalid choice. Please try again.")


if __name__ == "__main__":
    main()
