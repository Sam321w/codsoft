
num1=float(input("enter the 1st number\n"))
num2=float(input("enter the 2nd number\n"))
operations=input("enter the operation you want to perform(+,-,*,/,%): ")

if operations=='+':
    print("result :",num1+num2)
elif operations=='-':
    print("results",num1-num2)
elif operations=='*':
    print("results",num1*num2)
elif operations=='/':
    print("results",num1/num2)
elif operations=='%':
    print("results",num1%num2)
else:
    print("invalid operations!")
    
